generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id
  active      Boolean
  name        String
  email       String    @unique
  password    String
  fingerprint String    @unique
  created_at  DateTime
  enrollment  String?   @unique
  birth       DateTime?
  shift       Shift?
  guardeds    GuardRelation[] @relation("guardeds")
  guardians       GuardRelation[] @relation("guardians")
  logs Log[]

  @@map("users")
}

model GuardRelation {
  guarded User   @relation("guardeds",fields: [guarded_id], references: [id])
  guarded_id       String
  guardian User @relation("guardians", fields: [guardian_id], references: [id])
  guardian_id         String

  @@id([guarded_id, guardian_id])
  @@map("guards")
}

model Log {
  id String @id
  log_type LogType
  created_at DateTime
  user User @relation(fields: [user_id], references: [id])
  user_id String
}

enum LogType {
  IN
  OUT
}

enum Shift {
  MORNING
  AFTERNOON
  NIGHT
}
